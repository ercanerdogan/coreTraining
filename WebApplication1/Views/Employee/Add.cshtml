@model WebApplication1.Models.EmployeeAddViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <form asp-controller="Employee" asp-action="Add">
        <label asp-for="employee.id"></label> : <input asp-for="employee.id" /><br />
        <label asp-for="employee.firstName"></label> : <input asp-for="employee.firstName" /><br />
        <label asp-for="employee.lastName"></label> :  <input asp-for="employee.lastName" /><br />
        <label asp-for="employee.cityID"></label> : <select asp-for="employee.cityID" asp-items="Model.Cities"/><br />
        <button type="submit">Add</button>
    </form>
</body>
</html>
